<div class="container mt-5">
    <h2 style="color: rgb(97, 5, 5);font-size: 50px;" class="text-center">{{blood}}</h2>
</div>


<div class="container">
    <a href="/donate" class="btn btn-danger ml-auto" style="float: right">Donate +</a>
</div>

<section>
    <div class="container mt-5">
        <div class="row">
            {{#if users}}
            
            <table class="table">
                <thead>
                    <tr>
                        
                        <th scope="col">Name</th>
                        <th scope="col">Blood Grupe</th>
                        <th scope="col">Mobile Number</th>
                        
                        <th scope="col">Call</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        
                        <td>{{this.Name}}</td>
                       
                        <td>{{this.Blood}}</td>
                         <td>{{this.Mobile}}</td>
                        <th >
                            <a class="btn btn-success" href="tel:{{this.Mobile}}">Call</a>
                        </th>
                        
                    </tr>
                    {{/each}}
                    
                </tbody>
            </table>
            

            {{else}}

            <div class="container ">
                <a href="/donate" style="text-align: center ; color: red;">Donate +</a>
            </div>

            {{/if}}

        </div>
    </div>


</section>